<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_main_actionbar"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:elevation="4dp">

        <ImageView
            android:id="@+id/actionbar_logo_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:background="@drawable/img_actionbar_logo" />

        <ImageView
            android:id="@+id/actiobar_character_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/img_actionbar_character" />

        <ImageView
            android:id="@+id/actionbar_search_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@drawable/btn_actionbar_search" />

</RelativeLayout>