<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.LoadingActivity"
    android:background="@color/pinkTheme">

    <ImageView
        android:id="@+id/iv_ani_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="207.5dp"/>

    <ImageView
        android:id="@+id/iv_text_loading"
        android:layout_below="@+id/iv_ani_loading"
        android:layout_width="232.5dp"
        android:layout_height="25dp"
        android:layout_marginTop="32.5dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/text_loading"/>

</RelativeLayout>