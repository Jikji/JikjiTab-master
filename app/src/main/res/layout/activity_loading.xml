<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pinkTheme"
    tools:context=".ui.LoadingActivity">

    <ImageView
        android:id="@+id/iv_ani_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="207.5dp" />

    <ImageView
        android:id="@+id/iv_text_loading"
        android:layout_width="232.5dp"
        android:layout_height="25dp"
        android:layout_below="@+id/iv_ani_loading"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/text_loading" />


    <RelativeLayout
        android:id="@+id/group_loading_widget"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible">

        <ImageView
            android:id="@+id/iv_logo_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_loading_logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="150dp"
            android:visibility="visible"/>

        <EditText
            android:id="@+id/et_id"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:layout_below="@id/iv_logo_loading"
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true"
            android:background="#fff"
            android:visibility="visible" />

        <EditText
            android:id="@+id/et_pwd"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:layout_below="@+id/et_id"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:background="#fff"
            android:visibility="visible" />

        <Button
            android:id="@+id/btn_find_id_pwd"
            android:layout_below="@+id/et_pwd"
            android:layout_width="230px"
            android:layout_height="47px"
            android:layout_marginTop="15dp"
            android:layout_marginStart="140dp"
            android:background="@drawable/btn_loading_search"
            android:visibility="visible"/>

        <Button
            android:id="@+id/btn_find_join_us"
            android:layout_below="@+id/et_pwd"
            android:layout_width="168px"
            android:layout_height="47px"
            android:layout_toRightOf="@+id/btn_find_id_pwd"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"
            android:background="@drawable/btn_loading_joinus"
            android:visibility="visible"/>

        <Button
            android:id="@+id/btn_loading_next"
            android:layout_below="@+id/et_pwd"
            android:layout_width="388px"
            android:layout_height="47px"
            android:layout_marginTop="55dp"
            android:layout_centerInParent="true"
            android:background="@drawable/btn_loading_next"
            android:visibility="visible"/>

    </RelativeLayout>


</RelativeLayout>