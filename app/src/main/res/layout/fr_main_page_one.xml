<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v4.view.ViewPager
                android:id="@+id/vp_fragment_page_one"
                android:layout_width="match_parent"
                android:layout_height="187.5dp" />

            <LinearLayout
                android:id="@+id/layout_home_best"
                android:layout_width="match_parent"
                android:layout_height="33.75dp"
                android:layout_below="@id/vp_fragment_page_one"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_home_grouplook"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/ib_home_best"
                    android:layout_width="120dp"
                    android:layout_height="33.75dp"
                    android:background="@drawable/btn_home_best" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_home_best_group"
                android:layout_width="match_parent"
                android:layout_height="136.25dp"
                android:layout_below="@id/layout_home_best">

                <ImageButton
                    android:id="@+id/ib_home_best1"
                    android:layout_width="wrap_content"
                    android:layout_height="131.25dp"
                    android:layout_weight="1"
                    android:background="@drawable/img_home_grouplook" />

                <ImageButton
                    android:id="@+id/ib_home_best2"
                    android:layout_width="wrap_content"
                    android:layout_height="131.25dp"
                    android:layout_weight="1"
                    android:background="@drawable/img_home_grouplook" />

                <ImageButton
                    android:id="@+id/ib_home_best3"
                    android:layout_width="wrap_content"
                    android:layout_height="131.25dp"
                    android:layout_weight="1"
                    android:background="@drawable/img_home_grouplook" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_home_sale"
                android:layout_width="match_parent"
                android:layout_height="33.75dp"
                android:layout_below="@id/layout_home_best_group"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_home_grouplook"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/ib_home_sale"
                    android:layout_width="145dp"
                    android:layout_height="33.75dp"
                    android:background="@drawable/btn_home_sale" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_home_sale_group"
                android:layout_width="match_parent"
                android:layout_height="136.25dp"
                android:layout_below="@id/layout_home_sale">

                <ImageButton
                    android:id="@+id/ib_home_sale1"
                    android:layout_width="wrap_content"
                    android:layout_height="131.25dp"
                    android:layout_weight="1"
                    android:background="@drawable/img_home_grouplook" />

                <ImageButton
                    android:id="@+id/ib_home_sale2"
                    android:layout_width="wrap_content"
                    android:layout_height="131.25dp"
                    android:layout_weight="1"
                    android:background="@drawable/img_home_grouplook" />

                <ImageButton
                    android:id="@+id/ib_home_sale3"
                    android:layout_width="wrap_content"
                    android:layout_height="131.25dp"
                    android:layout_weight="1"
                    android:background="@drawable/img_home_grouplook" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_home_md"
                android:layout_width="match_parent"
                android:layout_height="33.75dp"
                android:layout_below="@id/layout_home_sale_group"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_home_grouplook"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/ib_home_md"
                    android:layout_width="137.5dp"
                    android:layout_height="33.75dp"
                    android:background="@drawable/btn_home_md" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_home_md_group"
                android:layout_width="match_parent"
                android:layout_height="136.25dp"
                android:layout_below="@id/layout_home_md">

                <ImageButton
                    android:id="@+id/ib_home_md1"
                    android:layout_width="wrap_content"
                    android:layout_height="131.25dp"
                    android:layout_weight="1"
                    android:background="@drawable/img_home_grouplook" />

                <ImageButton
                    android:id="@+id/ib_home_md2"
                    android:layout_width="wrap_content"
                    android:layout_height="131.25dp"
                    android:layout_weight="1"
                    android:background="@drawable/img_home_grouplook" />

                <ImageButton
                    android:id="@+id/ib_home_md3"
                    android:layout_width="wrap_content"
                    android:layout_height="131.25dp"
                    android:layout_weight="1"
                    android:background="@drawable/img_home_grouplook" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_home_product1"
                android:layout_width="match_parent"
                android:layout_height="207.5dp"
                android:layout_below="@+id/layout_home_md_group"
                android:layout_marginTop="5dp"
                android:background="#fff"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/ib_home_product1"
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    android:layout_weight="1"
                    android:background="@drawable/img_home_product"
                    android:layout_gravity="center_vertical"/>

                <ImageButton
                    android:id="@+id/ib_home_product2"
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    android:layout_weight="1"
                    android:background="@drawable/img_home_product"
                    android:layout_gravity="center_vertical"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_home_product2"
                android:layout_width="match_parent"
                android:layout_height="207.5dp"
                android:layout_below="@+id/layout_home_product1"
                android:layout_marginTop="5dp"
                android:background="#fff"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/ib_home_product3"
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    android:layout_weight="1"
                    android:background="@drawable/img_home_product"
                    android:layout_gravity="center_vertical"/>

                <ImageButton
                    android:id="@+id/ib_home_product4"
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    android:layout_weight="1"
                    android:background="@drawable/img_home_product"
                    android:layout_gravity="center_vertical"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_home_product3"
                android:layout_width="match_parent"
                android:layout_height="207.5dp"
                android:layout_below="@+id/layout_home_product2"
                android:layout_marginTop="5dp"
                android:background="#fff"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/ib_home_product5"
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    android:layout_weight="1"
                    android:background="@drawable/img_home_product"
                    android:layout_gravity="center_vertical"/>

                <ImageButton
                    android:id="@+id/ib_home_product6"
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    android:layout_weight="1"
                    android:background="@drawable/img_home_product"
                    android:layout_gravity="center_vertical"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_home_product4"
                android:layout_width="match_parent"
                android:layout_height="207.5dp"
                android:layout_below="@+id/layout_home_product3"
                android:layout_marginTop="5dp"
                android:background="#fff"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/ib_home_product7"
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    android:layout_weight="1"
                    android:background="@drawable/img_home_product"
                    android:layout_gravity="center_vertical"/>

                <ImageButton
                    android:id="@+id/ib_home_product8"
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    android:layout_weight="1"
                    android:background="@drawable/img_home_product"
                    android:layout_gravity="center_vertical"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_home_product5"
                android:layout_width="match_parent"
                android:layout_height="207.5dp"
                android:layout_below="@+id/layout_home_product4"
                android:layout_marginTop="5dp"
                android:background="#fff"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/ib_home_product9"
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    android:layout_weight="1"
                    android:background="@drawable/img_home_product"
                    android:layout_gravity="center_vertical"/>

                <ImageButton
                    android:id="@+id/ib_home_product10"
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    android:layout_weight="1"
                    android:background="@drawable/img_home_product"
                    android:layout_gravity="center_vertical"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_tab_bottom"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@+id/layout_home_product5"
                android:background="@drawable/img_tab_home_bottom"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_tab_main_bottom_all"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:src="@drawable/tab_main_bottom_all_on" />

                <ImageView
                    android:id="@+id/iv_tab_main_bottom_couple"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:src="@drawable/tab_main_bottom_couple_on" />

                <ImageView
                    android:id="@+id/iv_tab_main_bottom_day"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:src="@drawable/tab_main_bottom_day_on" />

                <ImageView
                    android:id="@+id/iv_tab_main_bottom_home"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:src="@drawable/tab_main_bottom_home_on" />

                <ImageView
                    android:id="@+id/iv_tab_main_bottom_some"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:src="@drawable/tab_main_bottom_some_on" />

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>