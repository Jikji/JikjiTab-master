<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:id="@+id/scrollView_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/layout_tab_bottom"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.ssomai.android.scalablelayout.ScalableLayout
                android:id="@+id/layout_vp_fragment_ad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:scale_base_height="540"
                app:scale_base_width="1080">

                <com.daimajia.slider.library.SliderLayout
                    android:id="@+id/sliderlayout_ad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:scale_height="540"
                    app:scale_width="1080" />

            </com.ssomai.android.scalablelayout.ScalableLayout>

            <!--home best 이미지버튼-->
            <LinearLayout
                android:id="@+id/layout_home_best"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/layout_vp_fragment_ad"
                android:layout_marginTop="7dp"
                android:background="#fff"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/ib_home_best"
                    android:layout_width="110dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/btn_home_best" />
            </LinearLayout>

            <!--home best 목록 이미지 버튼-->
            <com.ssomai.android.scalablelayout.ScalableLayout
                android:id="@+id/layout_home_best_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout_home_best"
                android:background="#fff"
                app:scale_base_height="480"
                app:scale_base_width="1080">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:scale_height="480"
                    app:scale_width="1080">

                    <ImageButton
                        android:id="@+id/ib_home_best1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/btn_home_grouplook" />

                    <ImageButton
                        android:id="@+id/ib_home_best2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/btn_home_grouplook" />

                    <ImageButton
                        android:id="@+id/ib_home_best3"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/btn_home_grouplook" />

                </LinearLayout>

            </com.ssomai.android.scalablelayout.ScalableLayout>

            <!--home sale 이미지 버튼-->
            <LinearLayout
                android:id="@+id/layout_home_sale"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/layout_home_best_group"
                android:layout_marginTop="7dp"
                android:background="#fff"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/ib_home_sale"
                    android:layout_width="136dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/btn_home_sale" />
            </LinearLayout>

            <!--home sale 목록 이미지 버튼 -->
            <com.ssomai.android.scalablelayout.ScalableLayout
                android:id="@+id/layout_home_sale_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout_home_sale"
                android:background="#fff"
                app:scale_base_height="480"
                app:scale_base_width="1080">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:scale_height="480"
                    app:scale_width="1080">

                    <ImageButton
                        android:id="@+id/ib_home_sale1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/btn_home_grouplook" />

                    <ImageButton
                        android:id="@+id/ib_home_sale2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/btn_home_grouplook" />

                    <ImageButton
                        android:id="@+id/ib_home_sale3"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/btn_home_grouplook" />

                </LinearLayout>

            </com.ssomai.android.scalablelayout.ScalableLayout>

            <!--home md 이미지 버튼-->
            <LinearLayout
                android:id="@+id/layout_home_md"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/layout_home_sale_group"
                android:layout_marginTop="7dp"
                android:background="#fff"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/ib_home_md"
                    android:layout_width="125dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="10dp"
                    android:layout_gravity="center"
                    android:background="@drawable/btn_home_md" />
            </LinearLayout>

            <!--home md 목록 이미지 버튼-->
            <com.ssomai.android.scalablelayout.ScalableLayout
                android:id="@+id/layout_home_md_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout_home_md"
                android:background="#fff"
                app:scale_base_height="480"
                app:scale_base_width="1080">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:scale_height="480"
                    app:scale_width="1080">

                    <ImageButton
                        android:id="@+id/ib_home_md1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/btn_home_grouplook" />

                    <ImageButton
                        android:id="@+id/ib_home_md2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/btn_home_grouplook" />

                    <ImageButton
                        android:id="@+id/ib_home_md3"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/btn_home_grouplook" />

                </LinearLayout>

            </com.ssomai.android.scalablelayout.ScalableLayout>

            <com.ssomai.android.scalablelayout.ScalableLayout
                android:id="@+id/layout_home_product1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout_home_md_group"
                android:layout_marginTop="7dp"
                app:scale_base_height="720"
                app:scale_base_width="1080">

                <!--home product 첫번째 줄-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:orientation="horizontal"
                    app:scale_height="720"
                    app:scale_width="1080">

                    <ImageButton
                        android:id="@+id/ib_home_product1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:background="@drawable/btn_home_product" />

                    <ImageButton
                        android:id="@+id/ib_home_product2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:background="@drawable/btn_home_product" />
                </LinearLayout>

            </com.ssomai.android.scalablelayout.ScalableLayout>


            <!--home product 두번째 줄-->
            <com.ssomai.android.scalablelayout.ScalableLayout
                android:id="@+id/layout_home_product2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout_home_product1"
                android:layout_marginTop="7dp"
                app:scale_base_height="720"
                app:scale_base_width="1080">

                <!--home product 첫번째 줄-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:orientation="horizontal"
                    app:scale_height="720"
                    app:scale_width="1080">

                    <ImageButton
                        android:id="@+id/ib_home_product3"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:background="@drawable/btn_home_product" />

                    <ImageButton
                        android:id="@+id/ib_home_product4"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:background="@drawable/btn_home_product" />
                </LinearLayout>

            </com.ssomai.android.scalablelayout.ScalableLayout>

            <!--home product 세번째 줄-->
            <com.ssomai.android.scalablelayout.ScalableLayout
                android:id="@+id/layout_home_product3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout_home_product2"
                android:layout_marginTop="7dp"
                app:scale_base_height="720"
                app:scale_base_width="1080">

                <!--home product 첫번째 줄-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:orientation="horizontal"
                    app:scale_height="720"
                    app:scale_width="1080">

                    <ImageButton
                        android:id="@+id/ib_home_product5"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:background="@drawable/btn_home_product" />

                    <ImageButton
                        android:id="@+id/ib_home_product6"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:background="@drawable/btn_home_product" />
                </LinearLayout>

            </com.ssomai.android.scalablelayout.ScalableLayout>

            <!--home product 네번째 줄-->
            <com.ssomai.android.scalablelayout.ScalableLayout
                android:id="@+id/layout_home_product4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout_home_product3"
                android:layout_marginTop="7dp"
                app:scale_base_height="720"
                app:scale_base_width="1080">

                <!--home product 첫번째 줄-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="208dp"
                    android:background="#fff"
                    android:orientation="horizontal"
                    app:scale_height="720"
                    app:scale_width="1080">

                    <ImageButton
                        android:id="@+id/ib_home_product7"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:background="@drawable/btn_home_product" />

                    <ImageButton
                        android:id="@+id/ib_home_product8"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:background="@drawable/btn_home_product" />
                </LinearLayout>

            </com.ssomai.android.scalablelayout.ScalableLayout>

            <!--home product 다섯번쩨 줄-->
            <com.ssomai.android.scalablelayout.ScalableLayout
                android:id="@+id/layout_home_product5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout_home_product4"
                android:layout_marginTop="7dp"
                app:scale_base_height="720"
                app:scale_base_width="1080">

                <!--home product 첫번째 줄-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="208dp"
                    android:background="#fff"
                    android:orientation="horizontal"
                    app:scale_height="720"
                    app:scale_width="1080">

                    <ImageButton
                        android:id="@+id/ib_home_product9"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:background="@drawable/btn_home_product" />

                    <ImageButton
                        android:id="@+id/ib_home_product10"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:background="@drawable/btn_home_product" />
                </LinearLayout>

            </com.ssomai.android.scalablelayout.ScalableLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>