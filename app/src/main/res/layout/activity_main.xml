<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.ssomai.android.scalablelayout.ScalableLayout
            android:id="@+id/layout_main_actionbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            tl:scale_base_width="1080"
            tl:scale_base_height="150">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                tl:scale_width="1080"
                tl:scale_height="150">

                <ImageView
                    android:id="@+id/iv_main_actionbar_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/img_actionbar_logo" />

                <ImageView
                    android:id="@+id/iv_main_actiobar_character"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/img_actionbar_character"/>

                <ImageView
                    android:id="@+id/iv_main_actionbar_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/img_actionbar_search" />

            </RelativeLayout>

        </com.ssomai.android.scalablelayout.ScalableLayout>

        <com.ssomai.android.scalablelayout.ScalableLayout
            android:id="@+id/layout_main_tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:elevation="4dp"
            tl:scale_base_width="1080"
            tl:scale_base_height="120">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tl:scale_width="1080"
                tl:scale_height="120"
                android:orientation="vertical"
                android:background="#fff">

                <com.flyco.tablayout.SlidingTabLayout
                    android:id="@+id/tabLayout_main"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tl:tl_indicator_color="#FA5858"
                    tl:tl_indicator_style="TRIANGLE"
                    tl:tl_indicator_width="12dp"
                    tl:tl_indicator_height="5dp"
                    tl:tl_underline_height="2dp"
                    tl:tl_underline_color="#fff"/>

            </LinearLayout>

        </com.ssomai.android.scalablelayout.ScalableLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/layout_main_tab_bottom"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:background="#fff"
                android:elevation="4dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_main_tab_bottom_home"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:layout_marginTop="9dp"
                    android:layout_weight="1"
                    android:src="@mipmap/btn_bottom_home_select" />

                <ImageView
                    android:id="@+id/iv_main_tab_bottom_couple"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:layout_marginTop="9dp"
                    android:layout_weight="1"
                    android:src="@mipmap/btn_bottom_couple_unselect" />

                <ImageView
                    android:id="@+id/iv_main_tab_bottom_day"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:layout_marginTop="9dp"
                    android:layout_weight="1"
                    android:src="@mipmap/btn_bottom_day_unselect" />

                <ImageView
                    android:id="@+id/iv_main_tab_bottom_some"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:layout_marginTop="9dp"
                    android:layout_weight="1"
                    android:src="@mipmap/btn_bottom_some_unselect" />

                <ImageView
                    android:id="@+id/iv_main_tab_bottom_all"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:layout_marginTop="9dp"
                    android:layout_weight="1"
                    android:src="@mipmap/btn_bottom_all_unselect" />
            </LinearLayout>

            <android.support.v4.view.ViewPager
                android:id="@+id/vp_main_page"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/layout_main_tab_bottom"/>

        </RelativeLayout>

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>